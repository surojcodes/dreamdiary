<div class="container overlay-dream form-container text-white">
    <div class="text-center mb-1 pt-4">
        <h1 class="text-gray"> " {{dream.title}} "</h1>
        <div class="text-right">
            <small class="mr-3"><a href="/dreams/user/{{dream.user.username}}"><i class="fas fa-pen-nib"></i>
                    {{dream.user.name}}</a> </small>
            <small><i class=" fas fa-calendar"></i> {{formatDate dream.createdAt 'MMMM Do YYYY'}}</small>
        </div>
        <hr>
    </div>
    <div class="p-4 dream-body">
        <p class="dream-body-para">
            {{{dream.content}}}
        </p>
        Tags:
        {{#each tags}}
        <a href="/dreams/tag/{{this}}"> <em>#{{this}}</em></a>
        {{else}}
        No Tags !
        {{/each}}
        <div class="mt-3">
            <a href="/dreams/user/{{dream.user.username}}" class="btn btn-outline-info">More by {{dream.user.name}} </a>
        </div>

    </div>
</div>
{{> _footer }}