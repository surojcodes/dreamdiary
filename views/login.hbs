<div class="container overlay form-container text-white">
    <div class="text-center mb-3">
        <i class="fas fa-sign-in-alt fa-4x mt-5"></i>
        <h2>Login</h2>
        <small>and see what unfolds.....</small>
    </div>
    <form action="/auth/login" method="POST" class="form">
        {{>_message}}
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email">
        </div>
        <div class="form-group mb-4">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password">
        </div>
        <small>Forgot password? Request new one <a href="/auth/forgot-password">here</a></small>
        <button type="submit" class="btn btn-info d-block mt-3">Log In</button>
        <div class="text-right pb-1">
            <small>No account? Create one <a href="/auth/register">here</a></small>
        </div>
        <hr>

    </form>
    <div class="social-login pb-5 text-center mt-5">
        Login with &nbsp; <br> <br>
        <form action="/auth/login" method="POST" class="d-inline-block">
            <button type="submit" class="btn btn-google"><i class="fab fa-google"></i></button>
        </form>
        <form action="/auth/facebook-login" method="POST" class="d-inline-block">
            <button type="submit" class="btn btn-facebook"><i class="fab fa-facebook"></i></button>
        </form>
