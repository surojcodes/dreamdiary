<div class="container overlay form-container text-white">
    <div class="text-center mb-3">
        <i class="fas fa-sign-in-alt fa-4x mt-5"></i>
        <h2>Join us</h2>
        <small>and see what unfolds.....</small>
    </div>
    <form action="/auth/register" method="POST" class="form">
        {{>_message}}
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" class="form-control" placeholder="Enter your full name" value="{{name}}">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" class="form-control" placeholder="Enter your email" value="{{email}}">
        </div>
        <div class="form-group mb-4">
            <label for="password">Password</label>
            <input type="password" name="password" class="form-control" placeholder="Enter a password">
        </div>
        <div class="form-group mb-4">
            <label for="cpassword">Confirm Password</label>
            <input type="password" name="cpassword" class="form-control" placeholder="Enter password again">
        </div>
        <button type="submit" class="btn btn-info">Register</button>
        <div class="text-right pb-1">
            <small>Already have an account? Login <a href="/auth/register">here</a></small>
        </div>
        <div class="social-login pb-5 text-center">
            Sign Up with &nbsp; <br> <br>
            <a href="/auth/google" class="btn btn-google"><i class="fab fa-google"></i></a>
            <a href="/auth/facebook" class="btn btn-facebook"><i class="fab fa-facebook"></i></a>
            <a href="/auth/twitter" class="btn btn-twitter"><i class="fab fa-twitter"></i></a>
            <a href="/auth/github" class="btn btn-github"><i class="fab fa-github"></i></a>
        </div>
    </form>


</div>